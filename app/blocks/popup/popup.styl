.popup
  position fixed
  top 15px
  bottom 15px
  right 15px
  left 15px
  background themeOverlay
  display flex
  justify-content center
  align-items center
  z-index 2
  border-radius 15px
  @media only screen and (min-width: navigationBreakPoint)
    border-radius 0
    top 0
    bottom 0
    right 0
    left 0