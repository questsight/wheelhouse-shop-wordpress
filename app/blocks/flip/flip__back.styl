.flip__back
  backface-visibility: hidden;
  transform: rotateY(180deg);
  position absolute
  width 100%
  height 100%
  display: flex;
  justify-content center
  align-items center
  flex-direction column
  border-radius 15px
  background lightColor
  padding 10px
  font-size 8px
  @media only screen and (min-width: xs)
    font-size 11px
  @media only screen and (min-width: sm)
    font-size baseSize
  ul
    padding: 0 0 0 20px;