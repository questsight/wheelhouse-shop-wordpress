.product__variation
  display: flex;
  align-items center
  position relative
  font-size 12px
  @media only screen and (min-width: xs)
    font-size baseSize
.product__variation:before
  content: "";
  position: absolute;
  right: 4px;
  top: 12px;
  border: 6px solid transparent;
  border-top: 7px solid #abb2cc;
  z-index: 2;
  @media only screen and (min-width: xs)
    top 14px
.product__variation.choice:before
  border none
.product__variation-text
  width: 110px;
  @media only screen and (min-width: xs)
    width 150px
.product__variation:after
  content: "";
  position: absolute;
  right: 1px;
  top: 6px;
  height: 6px;
  width: 20px;
  width 20px
  background #fff
  z-index: 1;
.product__variation.product__variation-block:after
  background transparent
.product__variation-text
  width: 110px;
  @media only screen and (min-width: xs)
    width 150px
.product__variation-choice
  width: calc(100% - 110px);
  cursor pointer
  margin 5px 0
  border: 1px solid headerColor;
  padding 5px 5px 0
  line-height 1.4
  position relative
  font-size: 10px;
  @media only screen and (min-width: xs)
    width: calc(100% - 150px);
    font-size: 13px;
.product__variation-choice span:first-child
  display: inherit;
  margin: -5px;
  padding: 5px;
.product__variation-select
  border-top: 1px solid headerColor;
  margin 5px -5px 0 -5px
  padding 5px 5px 0
.product__variation-input
  display flex
  align-items center
  margin-bottom 5px
  input
    margin-right 15px
.product__variation-size
  display: flex;
  align-items center
  position relative
  font-size 12px
  @media only screen and (min-width: xs)
    font-size baseSize
.product__variation-choice.accent
  text-transform: uppercase;
  border: 1px solid accentColor;
  color: accentColor;
  font-family subtitleFont