.product__gallery
  width 100%
  display flex
  flex-wrap wrap
  justify-content center
  align-items: flex-start;
  @media only screen and (min-width: sm)
    width 50%
.product__img
  width calc(25% - 10px)
  cursor pointer
  margin 5px
  border-radius 15px
  position relative
.product__first
  width calc(100% - 10px)
  cursor pointer
  margin 5px
  border-radius 50px
  line-height 0
  overflow hidden
  display flex
  align-items flex-start
  img
    flex-shrink: 0;
.glass
  width: 175px;
  height: 175px;
  position: absolute;
  border-radius: 50%;
  cursor: crosshair;
  box-shadow:
    0 0 0 7px rgba(255, 255, 255, 0.85),
    0 0 7px 7px rgba(0, 0, 0, 0.25),
    inset 0 0 40px 2px rgba(0, 0, 0, 0.25);
  display: none;