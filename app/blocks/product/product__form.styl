.product__form-scroll
  @media only screen and (min-width: sm)
    max-height 280px;
    overflow: scroll;
    border: 1px solid rgba(102,102,113,.1);
    padding: 10px;
    color themeDarkOverlay
    font-size: 13px;
    position relative
.product__form
  display flex
  flex-direction column
  max-width 100%
  select
    color baseColor
    font-family baseFont
    border 1px solid headerColor
    font-size: 10px;
    outline: none;
    background lightColor
    border-radius 0
    appearance: none;
    @media only screen and (min-width: xs)
      font-size: 13px;
    &:active
      border 1px solid themeColor
      outline: none; 
    &:focus
      border 1px solid themeColor
      outline: none; 
    &:hover
      border 1px solid themeColor
      outline: none; 
  button
    background themeColor
    color lightColor
    border 1px solid themeColor
    padding 10px 30px
    border-radius 5px
    margin 15px 0
    width: 100%
    max-width 300px
    text-transform uppercase
    outline none
    &:hover
      border-radius none
.a-button
    background themeColor
    color lightColor
    border 1px solid themeColor
    padding 10px 30px
    border-radius 5px
    margin 15px 0
    width: 100%
    max-width 300px
    text-transform uppercase
    outline none
    text-align: center;
    &:hover
      border-radius none