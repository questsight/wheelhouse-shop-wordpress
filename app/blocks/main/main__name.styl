.main__name
  position absolute
  right 0
  left 0
  bottom 0
  display flex
  flex-direction column
  align-items center
  padding-bottom 5px
  background themeOverlay
  border-bottom-left-radius 15px
  border-bottom-right-radius 15px
  @media only screen and (min-width: sm)
    top 50px
    right 20px
    left calc(100% - 250px)
    background transparent
    padding-bottom 0
  @media only screen and (min-width: navigationBreakPoint)
    top calc(20vh - 40px)
    left 52%
    right calc(48% - 230px)