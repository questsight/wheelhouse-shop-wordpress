.main__name
  position absolute
  right 0
  left 0
  bottom 0
  display flex
  flex-direction column
  align-items center
  padding-bottom 5px
  background themeOverlay
  border-bottom-left-radius 15px
  border-bottom-right-radius 15px
  @media only screen and (min-width: sm)
    top calc(20vh - 40px)
    left 5%
    right calc(95% - 400px)
    background transparent
    padding-bottom 0