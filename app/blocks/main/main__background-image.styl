.main__background-image
  object-fit: cover;
  object-position 15% top
  width: 100%;
  height: 100%;
  max-height 700px
  max-width none
  border-radius 15px
  @media only screen and (min-width: sm)
     object-position left top
  @media only screen and (min-width: navigationBreakPoint)
    border-radius 0
    object-position center 35%