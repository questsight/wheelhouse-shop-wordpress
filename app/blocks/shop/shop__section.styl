.shop__section
  margin 15px
  width calc(100% - 30px)
  display flex
  flex-direction column
  align-items center
  input[name='username'],
  input[name='password'],
  input[name='email']
    border-top: none!important
    border-left none!important
    border-right none!important
    border-bottom: 1px solid themeColor!important
    border-radius 0!important
    margin-bottom 15px
    width: 100%;
    display block
  button
    color lightColor
    padding 10px
    border-radius 15px
    border: 1px solid lightColor
    font-size subtitleSize
    width 100%
    font-family baseFont
    text-align center
    background themeColor
    display block
  a
    color accentColor
    text-decoration underline
    font-family baseItalicFont
  a:hover
    color accentColor
    text-decoration underline
    font-family titleItalicFont
  form
    margin 30px 0
    display flex
    flex-direction column
    width 320px
    max-width 100%
  @media only screen and (min-width: sm)
    width calc(50% - 75px)
.shop__section:nth-child(1)
  @media only screen and (min-width: sm)
    margin 15px 45px 15px 30px
.shop__section:nth-child(2)
  @media only screen and (min-width: sm)
    margin 15px 30px 15px 45px